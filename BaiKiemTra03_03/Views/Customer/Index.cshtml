<div class="container">
	<form asp-action="Search" method="get">
		<input type="text" name="searchString" placeholder="Nhập tên khách hàng cần tìm..."
			   value="@ViewBag.SearchString" />
		<input type="submit" value="Tìm Kiếm" />
	</form>
	<table class="table">
		<thead>
			<tr>
				<th>Tên khách hàng</th>
				<th>Địa chỉ</th>
				<th>Số điện thoại</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in ViewBag.Customer)
			{
				<tr>
					<td width="20%">@item.customer_name</td>
					<td width="20%">@item.address</td>
					<td width="20">@item.phone_number</td>
					<td width="20">@item.email</td>
					<td width="20%">
						<a asp-action="Edit" asp-route-id="@item.customer_Id">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.customer_Id">Details</a>
						|<a asp-action="Delete" asp-route-id="@item.customer_Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>


